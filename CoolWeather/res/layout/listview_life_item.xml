<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_ll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5.0dip"
    android:layout_weight="2.0"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_life_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1.0"
        android:paddingLeft="5.0dip"
        android:paddingTop="5.0dip"
        android:src="@drawable/ic_life_info_chuanyi" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tv_life_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25.0dip"
            android:singleLine="true"
            android:text="穿衣指数"
            android:textColor="@android:color/white"
            android:textSize="@dimen/biz_plugin_weather_climate_textsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_life_zs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_toRightOf="@id/tv_life_title"
            android:text="热"
            android:textColor="@android:color/white"
            android:textSize="@dimen/biz_plugin_weather_climate_textsize" />

        <TextView
            android:id="@+id/tv_life_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_life_title"
            android:layout_marginLeft="25.0dip"
            android:layout_marginTop="5.0dip"
            android:lines="2"
            android:text="天气热，建议着短裙、短裤、短薄外套、T恤等夏季服装。"
            android:textColor="@android:color/white"
            android:textSize="@dimen/biz_plugin_weather_otherday_small_textsize" 
           />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_life_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5.0dip"
        android:src="@drawable/weather_detail_recent_slider_right_indicater" />

</LinearLayout>